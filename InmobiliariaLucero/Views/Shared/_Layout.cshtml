<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InmobiliariaLucero</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">InmobiliariaLucero</a>
              
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">

                        @if (!User.Identity.IsAuthenticated)
                        {
                           <li class="nav-item">
                               <a class="nav-link float-right" asp-controller="Usuario" asp-action="Login">Acceder<span class="sr-only">(current)</span></a>
                           </li> }
                        else
                        {

                     <div class="collapse navbar-collapse" id="navbarSupportedContent">
                         <ul class="navbar-nav ml-auto">

                    <li class="nav-item ">
                        <a class="nav-link" asp-controller="Propietarios" asp-action="Index">Propietarios<span class="sr-only">(current)</span></a>
                    </li>

                         <li class="nav-item">
                        <a class="nav-link" asp-controller="Inmuebles" asp-action="Index">Inmuebles<span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Inquilinos" asp-action="Index">Inquilinos<span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="ContratoAlquiler" asp-action="Index">Alquileres<span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Pago" asp-action="Index">Pagos<span class="sr-only">(current)</span></a>
                    </li>

                    @if (User.IsInRole("Administrador") || User.IsInRole("SuperAdministrador"))

                    {
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Usuario" asp-action="Index">Usuarios<span class="sr-only">(current)</span></a>
                     </li>}

                    <li class="nav-item">
                        <a class="nav-link" style="color: #943126 " asp-controller="Usuario" asp-action="Logout">Salir<span class="sr-only">(current)</span></a>
                    </li>
                </ul>
            </div>}

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - InmobiliariaLucero - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
